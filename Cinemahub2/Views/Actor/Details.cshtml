@using Cinemahub2.Models.DTOs;
@model List<MoviesDTO>;


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @ViewBag.actor.Name
        <dt class="col-sm-2">
            Nationality
        </dt>
        <dd class="col-sm-10">
            @ViewBag.actor.Nationality
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @ViewBag.actor.Status

        </dd>
        <dt class="col-sm-2">
            Birthday
        </dt>
        <dd class="col-sm-10">
            @ViewBag.actor.Birthday

        </dd>
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @ViewBag.actor.CreatedBy

        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                <strong>Name</strong>
            </th>
            <th>
                <strong>Genre</strong>
            </th>
            <th>
                <strong>Director</strong>
            </th>
            <th>
                <strong>Duration</strong>
            </th>
            <th>
                <strong>Released</strong>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Director)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Released)
                </td>   
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@ViewBag.actor.Id">Edit</a> |
    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
</div>
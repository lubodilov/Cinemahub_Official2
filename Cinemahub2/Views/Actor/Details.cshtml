@using Cinemahub2.Models.DTOs;
@model List<ActorDTO>;


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model[Model.Count-1].Name
        </dd>
        <dt class="col-sm-2">
            Birthday
        </dt>
        <dd class="col-sm-10">
            @Model[Model.Count - 1].Birthday

        </dd>
        <dt class="col-sm-2">
            Nationality
        </dt>
        <dd class="col-sm-10">
            @Model[Model.Count - 1].Nationality
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model[Model.Count - 1].Status

        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model[Model.Count-1].Id">Edit</a> |
    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
</div>
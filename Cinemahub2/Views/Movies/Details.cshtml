@model Cinemahub2.Models.DTOs.MoviesDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movies</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @ViewBag.movie.Name
        </dd>
        <dt class="col-sm-2">
            Director
        </dt>
        <dd class="col-sm-10">
            @ViewBag.movie.Director
        </dd>
        <dt class="col-sm-2">
            Duration
        </dt>
        <dd class="col-sm-10">
            @ViewBag.movie.Duration
        </dd>
        <dt class="col-sm-2">
            Released
        </dt>
        <dd class="col-sm-10">
            @ViewBag.movie.Released
        </dd>
        <dt class="col-sm-2">
            CreatedBy
        </dt>
        <dd class="col-sm-10">
            @ViewBag.movie.CreatedBy
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@ViewBag.movie.Id)">Edit</a> |
    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
</div>
